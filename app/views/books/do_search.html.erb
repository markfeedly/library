<p id="notice"><%= notice %></p>

<h1>Search Results</h1>

<% if @author != ""  %>
  <p>Author <%= @author %></p>
<% end  %>
<% if @title != ""  %>
  <p>Title <%= @title  %></p>
<% end  %>
<% if @genre != ""  %>
  <p>Title <%= @genre  %></p>
<% end  %>
<br>

<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Title</th>
      <th>Genre</th>
      <th>Ownrating</th>
      <th>Googleid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.author %></td>
        <td><%= book.title %></td>
        <td><%= book.genre %></td>
        <td><%= book.ownRating %></td>
        <td><%= book.googleId %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>

<%= link_to 'Search Books', search_books_path %>

