<p id="notice"><%= notice %></p>

<p>
  <strong>Author:</strong>
  <%= @book.author %>
</p>

<p>
  <strong>Title:</strong>
  <%= @book.title %>
</p>

<p>
  <strong>Genre:</strong>
  <%= @book.genre %>
</p>

<p>
  <strong>Ownrating:</strong>
  <%= @book.ownRating %>
</p>

<p>
  <strong>Googleid:</strong>
  <%= @book.googleId %>
</p>

<% if volume = @book.find_details %>
  <p>
    Published date: <%= volume.volume_info['publishedDate'] %>
  </p>
  <p>
    Page count: <%= volume.volume_info['pageCount'] %>
  </p>
  <p>
    Description: <%=raw volume.volume_info['description'] %>
  </p>



<% end %>


